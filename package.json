    "babel-core": "^6.5.1",
    "babel-eslint": "^4.1.8",
    "babel-plugin-syntax-object-rest-spread": "^6.5.0",
    "babel-plugin-transform-object-rest-spread": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "eslint": "^1.10.3",
    "eslint-config-refineryjs": "^0.1.1"
  },
  "dependencies": {
    "babel-core": "^6.5.1",
